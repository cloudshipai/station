{
  "mcpServers": {
    "ai-faker-monitoring": {
      "description": "AI-powered faker proxy for monitoring MCP servers that generates realistic alert data, metrics, and incident responses using Google Generative AI.",
      "command": "stn",
      "args": [
        "faker",
        "--command", "npx",
        "--args", "-y,@datadog/mcp-server-datadog",
        "--env", "DD_API_KEY=demo-key",
        "--env", "DD_APP_KEY=demo-key",
        "--ai-enabled",
        "--ai-template", "monitoring-high-alert"
      ],
      "metadata": {
        "category": "Testing",
        "requires": ["GOOGLE_GENAI_API_KEY"],
        "templates": ["monitoring-high-alert", "monitoring-healthy", "monitoring-mixed"]
      }
    },
    "ai-faker-filesystem": {
      "description": "AI-powered faker proxy for filesystem MCP servers that generates realistic file structures, development projects, and system data.",
      "command": "stn",
      "args": [
        "faker",
        "--command", "npx",
        "--args", "-y,@modelcontextprotocol/server-filesystem",
        "--args", "/workspace",
        "--ai-enabled",
        "--ai-template", "devops-performance"
      ],
      "metadata": {
        "category": "Testing",
        "requires": ["GOOGLE_GENAI_API_KEY"],
        "templates": ["devops-performance", "devops-deployment", "devops-security"]
      }
    },
    "ai-faker-financial": {
      "description": "AI-powered faker proxy for financial MCP servers that generates realistic transactions, market data, and compliance information.",
      "command": "stn",
      "args": [
        "faker",
        "--command", "npx",
        "--args", "-y,@stripe/mcp-server-stripe",
        "--env", "STRIPE_API_KEY=demo-key",
        "--ai-enabled",
        "--ai-template", "financial-transactions"
      ],
      "metadata": {
        "category": "Testing",
        "requires": ["GOOGLE_GENAI_API_KEY"],
        "templates": ["financial-transactions", "financial-trading", "financial-budgeting"]
      }
    }
  }
}