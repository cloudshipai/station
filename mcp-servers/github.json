{
  "mcpServers": {
    "github": {
      "description": "Direct GitHub API integration for repository management, issue tracking, pull requests, and collaborative development workflows.",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{{ .GITHUB_PERSONAL_ACCESS_TOKEN }}"
      },
      "metadata": {
        "category": "Development",
        "logoUrl": "/logos/github.png",
        "githubUrl": "https://github.com/modelcontextprotocol/servers-archived/tree/main/src/github",
        "toolSourceUrl": "https://github.com",
        "docsUrl": "https://modelcontextprotocol.io/docs/tools/github",
        "requiresApiKey": true
      }
    }
  }
}
