---
metadata:
  name: "Cascade Failure Rca"
  description: "Cascading failure analysis"
  tags: ["reliability", "investigations", "sre", "cascade"]
model: gpt-4o-mini
max_steps: 10
app: "reliability"
app_type: "investigations"
output:
  format: json
  schema:
    type: object
    properties:
      incident_id:
        type: string
        description: Unique incident identifier
      root_cause:
        type: string
        description: Root cause analysis of cascading failure
      affected_services:
        type: array
        items:
          type: string
        description: Services affected by cascade failure
      timeline:
        type: object
        properties:
          start_time:
            type: string
          detection_time:
            type: string
          duration:
            type: string
        description: Incident timeline
      key_metrics:
        type: object
        properties:
          initial_failure_point:
            type: string
          cascade_depth:
            type: integer
          total_services_impacted:
            type: integer
        description: Cascade failure propagation metrics
      remediation:
        type: array
        items:
          type: string
        description: Circuit breaker and isolation recommendations
tools:
  - "__list_incidents"
  - "__query_range"
---

