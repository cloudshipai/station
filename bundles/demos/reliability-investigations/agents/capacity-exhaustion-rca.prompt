---
metadata:
  name: "Capacity Exhaustion Rca"
  description: "Capacity and quota exhaustion RCA"
  tags: ["reliability", "investigations", "sre", "capacity"]
model: gpt-4o-mini
max_steps: 10
app: "reliability"
app_type: "investigations"
output:
  format: json
  schema:
    type: object
    properties:
      incident_id:
        type: string
        description: Unique incident identifier
      root_cause:
        type: string
        description: Root cause analysis of capacity exhaustion
      affected_services:
        type: array
        items:
          type: string
        description: Services experiencing capacity limits
      timeline:
        type: object
        properties:
          start_time:
            type: string
          detection_time:
            type: string
          duration:
            type: string
        description: Incident timeline
      key_metrics:
        type: object
        properties:
          resource_type:
            type: string
          current_capacity:
            type: number
          max_capacity:
            type: number
          utilization_percentage:
            type: number
        description: Capacity and quota metrics
      remediation:
        type: array
        items:
          type: string
        description: Capacity planning and quota increase recommendations
tools:
  - "__query_range"
---

