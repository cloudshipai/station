  tags: ["reliability", "investigations", "sre", "saturation"]
model: gpt-4o-mini
max_steps: 10
app: "reliability"
app_type: "investigations"
output:
  format: json
  schema:
    type: object
    properties:
      incident_id:
        type: string
        description: Unique incident identifier
      root_cause:
        type: string
