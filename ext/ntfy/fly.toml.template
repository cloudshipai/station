# Simple ntfy server deployment
app = "{{APP_NAME}}"
primary_region = "ord"

[build]
  image = "binwiederhier/ntfy:latest"

[processes]
  app = "serve"

[http_service]
  internal_port = 80
  force_https = true
  auto_stop_machines = "stop"
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

[[vm]]
  cpu_kind = "shared"
  cpus = 1
  memory_mb = 256