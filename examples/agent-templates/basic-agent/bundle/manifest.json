{
  "name": "basic-file-manager",
  "version": "1.0.0",
  "description": "A basic file management agent for common file operations",
  "author": "Station Team",
  "agent_type": "utility",
  "mcp_bundles": [
    {
      "name": "filesystem-tools",
      "version": ">=1.0.0",
      "source": "registry",
      "required": true,
      "description": "Basic filesystem operations"
    }
  ],
  "required_tools": [
    {
      "name": "list_directory",
      "server_name": "filesystem",
      "mcp_bundle": "filesystem-tools",
      "required": true
    },
    {
      "name": "read_text_file",
      "server_name": "filesystem", 
      "mcp_bundle": "filesystem-tools",
      "required": true
    },
    {
      "name": "search_files",
      "server_name": "filesystem",
      "mcp_bundle": "filesystem-tools",
      "required": false
    }
  ],
  "required_variables": {
    "CLIENT_NAME": {
      "type": "string",
      "description": "Name of the client this agent serves",
      "required": true
    },
    "WORKSPACE_PATH": {
      "type": "string",
      "description": "Default workspace directory path",
      "required": false,
      "default": "/home/user"
    },
    "MAX_FILES": {
      "type": "number",
      "description": "Maximum number of files to process at once",
      "required": false,
      "default": 1000
    },
    "VERBOSE_MODE": {
      "type": "boolean",
      "description": "Enable detailed logging output",
      "required": false,
      "default": false
    }
  },
  "station_version": ">=0.1.0",
  "tags": ["file-management", "utility", "basic"],
  "license": "MIT"
}