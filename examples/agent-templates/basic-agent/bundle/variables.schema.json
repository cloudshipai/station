{
  "CLIENT_NAME": {
    "type": "string",
    "description": "Name of the client this agent serves",
    "required": true,
    "examples": ["Acme Corporation", "Tech Startup Inc", "Local Business"]
  },
  "WORKSPACE_PATH": {
    "type": "string", 
    "description": "Default workspace directory path",
    "required": false,
    "default": "/home/user",
    "examples": ["/home/user", "/workspace", "/project", "/data"]
  },
  "MAX_FILES": {
    "type": "number",
    "description": "Maximum number of files to process at once",
    "required": false,
    "default": 1000,
    "minimum": 1,
    "maximum": 10000,
    "examples": [100, 500, 1000, 5000]
  },
  "VERBOSE_MODE": {
    "type": "boolean",
    "description": "Enable detailed logging output",
    "required": false,
    "default": false,
    "examples": [true, false]
  }
}