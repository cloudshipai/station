{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://station.example.com/schemas/agent-template-install.json",
  "title": "Agent Template Installation Request",
  "description": "Schema for installing an agent from a template bundle via API",
  "type": "object",
  "required": ["bundle_path"],
  "properties": {
    "bundle_path": {
      "type": "string",
      "minLength": 1,
      "description": "Absolute or relative path to the agent template bundle directory",
      "examples": [
        "/path/to/bundle",
        "./my-agent-bundle",
        "/templates/web-scraper"
      ]
    },
    "environment": {
      "type": "string",
      "default": "default",
      "description": "Target environment name where the agent will be deployed",
      "examples": ["default", "development", "staging", "production"]
    },
    "variables": {
      "type": "object",
      "description": "Template variables to substitute in the agent configuration",
      "additionalProperties": true,
      "properties": {
        "CLIENT_NAME": {
          "type": "string",
          "description": "Name of the client this agent serves"
        },
        "WORKSPACE_PATH": {
          "type": "string", 
          "description": "Default workspace directory path"
        },
        "MAX_FILES": {
          "type": "number",
          "minimum": 1,
          "maximum": 10000,
          "description": "Maximum number of files to process at once"
        },
        "VERBOSE_MODE": {
          "type": "boolean",
          "description": "Enable detailed logging output"
        }
      }
    }
  },
  "examples": [
    {
      "bundle_path": "/templates/basic-agent",
      "environment": "production",
      "variables": {
        "CLIENT_NAME": "Acme Corp",
        "WORKSPACE_PATH": "/data/production",
        "MAX_FILES": 5000,
        "VERBOSE_MODE": false
      }
    },
    {
      "bundle_path": "./agent-bundles/file-manager",
      "environment": "development", 
      "variables": {
        "CLIENT_NAME": "Dev Testing",
        "VERBOSE_MODE": true
      }
    }
  ]
}