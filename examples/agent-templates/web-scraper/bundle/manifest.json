{
  "name": "web-scraper-agent",
  "version": "2.1.0", 
  "description": "Advanced web scraping agent with API integration and proxy support",
  "author": "Station Team",
  "agent_type": "data-collection",
  "mcp_bundles": [
    {
      "name": "web-tools",
      "version": ">=2.0.0",
      "source": "registry", 
      "required": true,
      "description": "HTTP client and web scraping tools"
    },
    {
      "name": "data-processing", 
      "version": ">=1.5.0",
      "source": "registry",
      "required": true,
      "description": "Data parsing and transformation utilities"
    }
  ],
  "required_tools": [
    {
      "name": "http_request",
      "server_name": "web",
      "mcp_bundle": "web-tools", 
      "required": true
    },
    {
      "name": "parse_html",
      "server_name": "web",
      "mcp_bundle": "web-tools",
      "required": true
    },
    {
      "name": "json_transform",
      "server_name": "data", 
      "mcp_bundle": "data-processing",
      "required": true
    },
    {
      "name": "xml_parse",
      "server_name": "data",
      "mcp_bundle": "data-processing", 
      "required": false
    }
  ],
  "required_variables": {
    "SERVICE_NAME": {
      "type": "string",
      "description": "Name of the web scraping service", 
      "required": true
    },
    "API_KEY": {
      "type": "string",
      "description": "Authentication API key for external services",
      "required": true,
      "sensitive": true
    },
    "BASE_URL": {
      "type": "string", 
      "description": "Base URL for scraping targets",
      "required": true,
      "validation": {
        "pattern": "^https?://.*",
        "message": "Must be a valid HTTP or HTTPS URL"
      }
    },
    "RATE_LIMIT": {
      "type": "number",
      "description": "Maximum requests per second",
      "required": false,
      "default": 1,
      "minimum": 0.1,
      "maximum": 10
    },
    "TIMEOUT": {
      "type": "number", 
      "description": "Request timeout in seconds",
      "required": false,
      "default": 30,
      "minimum": 5,
      "maximum": 300
    },
    "USER_AGENT": {
      "type": "string",
      "description": "Custom User-Agent string for requests", 
      "required": false,
      "default": ""
    },
    "ENABLE_PROXY": {
      "type": "boolean",
      "description": "Enable proxy server for requests",
      "required": false,
      "default": false
    },
    "PROXY_URL": {
      "type": "string",
      "description": "Proxy server URL (required if ENABLE_PROXY is true)",
      "required": false,
      "sensitive": true,
      "conditional": {
        "when": "ENABLE_PROXY",
        "equals": true,
        "then_required": true
      }
    },
    "MAX_RETRIES": {
      "type": "number",
      "description": "Maximum number of retry attempts for failed requests",
      "required": false, 
      "default": 3,
      "minimum": 0,
      "maximum": 10
    }
  },
  "station_version": ">=0.2.0",
  "tags": ["web-scraping", "data-collection", "api-integration", "advanced"],
  "license": "MIT"
}