{
  "name": "Jira Project Management",
  "description": "Manage Jira issues, projects, and workflows for agile development",
  "mcpServers": {
    "jira": {
      "command": "npx",
      "args": ["-y", "@mcp/server-jira"],
      "env": {
        "JIRA_HOST": "{{JIRA_HOST}}",
        "JIRA_USERNAME": "{{JIRA_USERNAME}}",
        "JIRA_API_TOKEN": "{{JIRA_API_TOKEN}}",
        "JIRA_PROJECT_KEY": "{{JIRA_PROJECT_KEY}}"
      }
    }
  },
  "templates": {
    "JIRA_HOST": {
      "description": "Jira instance URL",
      "type": "string",
      "required": true,
      "help": "Example: https://yourcompany.atlassian.net"
    },
    "JIRA_USERNAME": {
      "description": "Jira username or email",
      "type": "string",
      "required": true
    },
    "JIRA_API_TOKEN": {
      "description": "Jira API token",
      "type": "password",
      "required": true,
      "sensitive": true,
      "help": "Create at: https://id.atlassian.com/manage-profile/security/api-tokens"
    },
    "JIRA_PROJECT_KEY": {
      "description": "Default project key",
      "type": "string",
      "required": false,
      "help": "Example: PROJ or DEV (leave empty to access all projects)"
    }
  }
}