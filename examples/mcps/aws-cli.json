{
  "name": "AWS CLI Tools",
  "description": "Official AWS MCP server for managing AWS resources via CLI",
  "mcpServers": {
    "aws": {
      "command": "npx",
      "args": ["-y", "@aws/mcp-server-aws"],
      "env": {
        "AWS_ACCESS_KEY_ID": "{{AWS_ACCESS_KEY_ID}}",
        "AWS_SECRET_ACCESS_KEY": "{{AWS_SECRET_ACCESS_KEY}}",
        "AWS_DEFAULT_REGION": "{{AWS_DEFAULT_REGION}}"
      }
    }
  },
  "templates": {
    "AWS_ACCESS_KEY_ID": {
      "description": "Your AWS Access Key ID",
      "type": "string",
      "required": true,
      "sensitive": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "description": "Your AWS Secret Access Key", 
      "type": "password",
      "required": true,
      "sensitive": true
    },
    "AWS_DEFAULT_REGION": {
      "description": "AWS region (e.g., us-east-1, us-west-2)",
      "type": "string",
      "required": true,
      "default": "us-east-1"
    }
  }
}