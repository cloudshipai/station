{
  "name": "Advanced Git Operations",
  "description": "Advanced Git operations including branching, merging, and repository management",
  "mcpServers": {
    "git": {
      "command": "npx",
      "args": ["-y", "@mcp/server-git"],
      "env": {
        "GIT_REPO_PATH": "{{GIT_REPO_PATH}}",
        "GIT_USER_NAME": "{{GIT_USER_NAME}}",
        "GIT_USER_EMAIL": "{{GIT_USER_EMAIL}}",
        "GIT_SSH_KEY": "{{GIT_SSH_KEY}}",
        "GIT_TOKEN": "{{GIT_TOKEN}}"
      }
    }
  },
  "templates": {
    "GIT_REPO_PATH": {
      "description": "Path to Git repository",
      "type": "path",
      "required": true,
      "help": "Example: /path/to/repo or ./my-project"
    },
    "GIT_USER_NAME": {
      "description": "Git commit author name",
      "type": "string",
      "required": true,
      "help": "Your full name for commit signatures"
    },
    "GIT_USER_EMAIL": {
      "description": "Git commit author email",
      "type": "string",
      "required": true,
      "help": "Email associated with your Git commits"
    },
    "GIT_SSH_KEY": {
      "description": "SSH private key for Git operations (base64 encoded)",
      "type": "password",
      "required": false,
      "sensitive": true,
      "help": "For SSH-based Git repositories"
    },
    "GIT_TOKEN": {
      "description": "Personal access token for HTTPS Git operations",
      "type": "password",
      "required": false,
      "sensitive": true,
      "help": "GitHub/GitLab personal access token"
    }
  }
}