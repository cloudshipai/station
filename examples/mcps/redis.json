{
  "name": "Redis Cache & Data Store",
  "description": "Connect to Redis for caching, session storage, and real-time data operations",
  "mcpServers": {
    "redis": {
      "command": "npx",
      "args": ["-y", "@mcp/server-redis"],
      "env": {
        "REDIS_HOST": "{{REDIS_HOST}}",
        "REDIS_PORT": "{{REDIS_PORT}}",
        "REDIS_PASSWORD": "{{REDIS_PASSWORD}}",
        "REDIS_DB": "{{REDIS_DB}}",
        "REDIS_TLS": "{{REDIS_TLS}}"
      }
    }
  },
  "templates": {
    "REDIS_HOST": {
      "description": "Redis server hostname",
      "type": "string",
      "required": true,
      "default": "localhost"
    },
    "REDIS_PORT": {
      "description": "Redis server port",
      "type": "number",
      "required": false,
      "default": "6379"
    },
    "REDIS_PASSWORD": {
      "description": "Redis password (if authentication enabled)",
      "type": "password",
      "required": false,
      "sensitive": true
    },
    "REDIS_DB": {
      "description": "Redis database number (0-15)",
      "type": "number",
      "required": false,
      "default": "0"
    },
    "REDIS_TLS": {
      "description": "Enable TLS/SSL connection",
      "type": "boolean",
      "required": false,
      "default": "false"
    }
  }
}