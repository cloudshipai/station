{
  "name": "HashiCorp Terraform",
  "description": "MCP server for working with HashiCorp Cloud Platform (HCP) Terraform",
  "mcpServers": {
    "terraform": {
      "command": "npx",
      "args": ["-y", "mcp-server-hcp-terraform"],
      "env": {
        "HCP_CLIENT_ID": "{{HCP_CLIENT_ID}}",
        "HCP_CLIENT_SECRET": "{{HCP_CLIENT_SECRET}}",
        "HCP_PROJECT_ID": "{{HCP_PROJECT_ID}}"
      }
    }
  },
  "templates": {
    "HCP_CLIENT_ID": {
      "description": "HashiCorp Cloud Platform Client ID",
      "type": "string",
      "required": true,
      "sensitive": true
    },
    "HCP_CLIENT_SECRET": {
      "description": "HashiCorp Cloud Platform Client Secret",
      "type": "password", 
      "required": true,
      "sensitive": true
    },
    "HCP_PROJECT_ID": {
      "description": "HCP Project ID",
      "type": "string",
      "required": true
    }
  }
}