{
  "name": "Elasticsearch Search Engine",
  "description": "Search and analyze data with Elasticsearch for full-text search and analytics",
  "mcpServers": {
    "elasticsearch": {
      "command": "npx",
      "args": ["-y", "@mcp/server-elasticsearch"],
      "env": {
        "ELASTICSEARCH_URL": "{{ELASTICSEARCH_URL}}",
        "ELASTICSEARCH_USERNAME": "{{ELASTICSEARCH_USERNAME}}",
        "ELASTICSEARCH_PASSWORD": "{{ELASTICSEARCH_PASSWORD}}",
        "ELASTICSEARCH_INDEX": "{{ELASTICSEARCH_INDEX}}",
        "ELASTICSEARCH_CA_CERT": "{{ELASTICSEARCH_CA_CERT}}"
      }
    }
  },
  "templates": {
    "ELASTICSEARCH_URL": {
      "description": "Elasticsearch cluster URL",
      "type": "string",
      "required": true,
      "default": "http://localhost:9200",
      "help": "Example: https://my-cluster.es.amazonaws.com:443"
    },
    "ELASTICSEARCH_USERNAME": {
      "description": "Elasticsearch username",
      "type": "string",
      "required": false,
      "help": "Required for secured clusters"
    },
    "ELASTICSEARCH_PASSWORD": {
      "description": "Elasticsearch password",
      "type": "password",
      "required": false,
      "sensitive": true
    },
    "ELASTICSEARCH_INDEX": {
      "description": "Default index pattern to search",
      "type": "string",
      "required": false,
      "help": "Example: logs-* or myapp-2023-*"
    },
    "ELASTICSEARCH_CA_CERT": {
      "description": "CA certificate for TLS (base64 encoded)",
      "type": "password",
      "required": false,
      "sensitive": true,
      "help": "Needed for self-signed certificates"
    }
  }
}