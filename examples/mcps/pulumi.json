{
  "name": "Pulumi Infrastructure",
  "description": "Official Pulumi MCP server for cloud infrastructure operations",
  "mcpServers": {
    "pulumi": {
      "command": "npx",
      "args": ["-y", "@pulumi/mcp-server"],
      "env": {
        "PULUMI_ACCESS_TOKEN": "{{PULUMI_ACCESS_TOKEN}}",
        "PULUMI_ORG": "{{PULUMI_ORG}}"
      }
    }
  },
  "templates": {
    "PULUMI_ACCESS_TOKEN": {
      "description": "Pulumi Access Token",
      "type": "password",
      "required": true,
      "sensitive": true,
      "help": "Create at: https://app.pulumi.com/account/tokens"
    },
    "PULUMI_ORG": {
      "description": "Pulumi organization name",
      "type": "string",
      "required": true
    }
  }
}