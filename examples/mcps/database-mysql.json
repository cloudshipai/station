{
  "name": "MySQL Database Operations",
  "description": "Connect to MySQL databases for schema management and data operations",
  "mcpServers": {
    "mysql": {
      "command": "npx",
      "args": ["-y", "@mcp/server-mysql"],
      "env": {
        "MYSQL_HOST": "{{MYSQL_HOST}}",
        "MYSQL_PORT": "{{MYSQL_PORT}}",
        "MYSQL_USER": "{{MYSQL_USER}}",
        "MYSQL_PASSWORD": "{{MYSQL_PASSWORD}}",
        "MYSQL_DATABASE": "{{MYSQL_DATABASE}}"
      }
    }
  },
  "templates": {
    "MYSQL_HOST": {
      "description": "MySQL server hostname or IP address",
      "type": "string",
      "required": true,
      "default": "localhost"
    },
    "MYSQL_PORT": {
      "description": "MySQL server port",
      "type": "number",
      "required": false,
      "default": "3306"
    },
    "MYSQL_USER": {
      "description": "MySQL username",
      "type": "string",
      "required": true
    },
    "MYSQL_PASSWORD": {
      "description": "MySQL password",
      "type": "password",
      "required": true,
      "sensitive": true
    },
    "MYSQL_DATABASE": {
      "description": "Default database name",
      "type": "string",
      "required": true
    }
  }
}