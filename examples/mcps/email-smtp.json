{
  "name": "Email SMTP Services",
  "description": "Send emails via SMTP servers including Gmail, Outlook, and custom servers",
  "mcpServers": {
    "email": {
      "command": "npx",
      "args": ["-y", "@mcp/server-smtp"],
      "env": {
        "SMTP_HOST": "{{SMTP_HOST}}",
        "SMTP_PORT": "{{SMTP_PORT}}",
        "SMTP_USER": "{{SMTP_USER}}",
        "SMTP_PASSWORD": "{{SMTP_PASSWORD}}",
        "SMTP_SECURE": "{{SMTP_SECURE}}",
        "FROM_EMAIL": "{{FROM_EMAIL}}",
        "FROM_NAME": "{{FROM_NAME}}"
      }
    }
  },
  "templates": {
    "SMTP_HOST": {
      "description": "SMTP server hostname",
      "type": "string",
      "required": true,
      "help": "Gmail: smtp.gmail.com, Outlook: smtp-mail.outlook.com"
    },
    "SMTP_PORT": {
      "description": "SMTP server port",
      "type": "number",
      "required": true,
      "default": "587",
      "help": "Common ports: 587 (TLS), 465 (SSL), 25 (plain)"
    },
    "SMTP_USER": {
      "description": "SMTP username (usually email address)",
      "type": "string",
      "required": true
    },
    "SMTP_PASSWORD": {
      "description": "SMTP password or app-specific password",
      "type": "password",
      "required": true,
      "sensitive": true,
      "help": "For Gmail/Outlook, use app passwords instead of main password"
    },
    "SMTP_SECURE": {
      "description": "Use secure connection (TLS/SSL)",
      "type": "boolean",
      "required": false,
      "default": "true"
    },
    "FROM_EMAIL": {
      "description": "Default sender email address",
      "type": "string",
      "required": true
    },
    "FROM_NAME": {
      "description": "Default sender name",
      "type": "string",
      "required": false,
      "default": "Station Agent"
    }
  }
}