{
  "name": "@cloudshipai/opencode-plugin",
  "version": "0.1.0",
  "description": "OpenCode plugin for Station integration via NATS",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.0",
    "@opencode-ai/sdk": "^1.0.0",
    "nats": "^2.28.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "bun": ">=1.1.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "opencode",
    "plugin",
    "station",
    "cloudship",
    "nats"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudshipai/station.git",
    "directory": "opencode-plugin"
  }
}
