{
  "mcpServers": {
    "slack": {
      "description": "Slack MCP server for posting incident reports and communicating with the team.",
      "command": "npx",
      "args": [
        "-y",
        "@zencoderai/slack-mcp-server"
      ],
      "env": {
        "SLACK_BOT_TOKEN": "{{ .SLACK_BOT_TOKEN }}",
        "SLACK_TEAM_ID": "{{ .SLACK_TEAM_ID }}"
      },
      "metadata": {
        "category": "Communication",
        "logoUrl": "/logos/slack.png",
        "githubUrl": "https://github.com/zencoderai/slack-mcp-server",
        "toolSourceUrl": "https://slack.com",
        "docsUrl": "https://api.slack.com/",
        "requiresApiKey": true
      }
    }
  }
}
