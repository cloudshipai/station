{
  "mcpServers": {
    "grafana": {
      "description": "A Model Context Protocol server for interacting with Grafana dashboards and monitoring. Supports both self-hosted Grafana instances and Grafana Cloud.",
      "command": "mcp-grafana",
      "args": [],
      "env": {
        "GRAFANA_URL": "{{ .GRAFANA_URL }}",
        "GRAFANA_SERVICE_ACCOUNT_TOKEN": "{{ .GRAFANA_SERVICE_ACCOUNT_TOKEN }}",
        "GRAFANA_USERNAME": "{{ .GRAFANA_USERNAME }}",
        "GRAFANA_PASSWORD": "{{ .GRAFANA_PASSWORD }}"
      },
      "metadata": {
        "category": "Monitoring",
        "logoUrl": "/logos/grafana.svg",
        "githubUrl": "https://github.com/grafana/mcp-grafana",
        "toolSourceUrl": "https://grafana.com",
        "docsUrl": "https://grafana.com/docs/",
        "requiresApiKey": true
      }
    }
  }
}
