---
import AvatarList from './AvatarList.astro'
type Props = {
  path: string
}
const { path } = Astro.props
---

<footer class="modern-footer">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-content">
      <!-- Brand Section -->
      <div class="footer-brand">
        <div class="brand-section">
          <div class="logo-container">
            <img src="/station/station-logo.png" alt="Station" width="32" height="32" />
          </div>
          <div class="brand-info">
            <h3 class="brand-title">Station</h3>
            <p class="brand-description">Self-hosted MCP agents for intelligent automation</p>
          </div>
        </div>
        <p class="brand-tagline">
          Build secure, intelligent agents that understand your development workflows and manage sensitive tools across environments.
        </p>
        <p class="community-note">
          Built with ❤️ by the <a href="https://github.com/cloudshipai" target="_blank" rel="noopener">cloudshipai community</a>
        </p>
      </div>

      <!-- Navigation Sections -->
      <div class="footer-nav">
        <div class="nav-section">
          <h4>Getting Started</h4>
          <ul>
            <li><a href="/station/en/introduction/">Introduction</a></li>
            <li><a href="/station/en/mcp/claude-desktop/">MCP Setup</a></li>
            <li><a href="/station/en/agents/creating/">Creating Agents</a></li>
            <li><a href="/station/en/examples/">Examples</a></li>
          </ul>
        </div>

        <div class="nav-section">
          <h4>Resources</h4>
          <ul>
            <li><a href="https://github.com/cloudshipai/station" target="_blank" rel="noopener">GitHub</a></li>
            <li><a href="https://github.com/cloudshipai/station/releases" target="_blank" rel="noopener">Releases</a></li>
            <li><a href="https://github.com/cloudshipai/station/issues" target="_blank" rel="noopener">Issues</a></li>
            <li><a href="https://github.com/cloudshipai/station/discussions" target="_blank" rel="noopener">Discussions</a></li>
          </ul>
        </div>

        <div class="nav-section">
          <h4>Community</h4>
          <ul>
            <li><a href="https://github.com/cloudshipai/station/blob/main/CONTRIBUTING.md" target="_blank" rel="noopener">Contributing</a></li>
            <li><a href="https://github.com/cloudshipai/station/blob/main/CODE_OF_CONDUCT.md" target="_blank" rel="noopener">Code of Conduct</a></li>
            <li><a href="https://github.com/cloudshipai/station/security/policy" target="_blank" rel="noopener">Security</a></li>
            <li><a href="https://github.com/cloudshipai/station/blob/main/LICENSE" target="_blank" rel="noopener">License</a></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Contributors Section -->
    <div class="footer-contributors">
      <div class="contributors-header">
        <h4>Contributors</h4>
        <p>Thank you to all who contribute to making Station better</p>
      </div>
      <AvatarList path={path} />
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="copyright">
        <p>&copy; 2025 CloudShip AI. Station is released under the MIT License.</p>
      </div>
      <div class="footer-links">
        <a href="https://github.com/cloudshipai/station/blob/main/LICENSE" target="_blank" rel="noopener">MIT License</a>
        <span class="divider">•</span>
        <a href="https://github.com/cloudshipai/station/blob/main/SECURITY.md" target="_blank" rel="noopener">Security Policy</a>
        <span class="divider">•</span>
        <a href="https://github.com/cloudshipai/station" target="_blank" rel="noopener">View on GitHub</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .modern-footer {
    margin-top: auto;
    background: var(--theme-bg);
    border-top: 1px solid var(--theme-divider);
    box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 3rem 2rem 1.5rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    margin-bottom: 2.5rem;
  }

  /* Brand Section */
  .footer-brand {
    max-width: 400px;
  }

  .brand-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 6px;
    background: var(--theme-accent);
    padding: 2px;
    flex-shrink: 0;
  }

  .logo-container img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 4px;
  }

  .brand-info {
    flex: 1;
  }

  .brand-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--theme-text);
    margin: 0 0 0.25rem 0;
    letter-spacing: -0.02em;
  }

  .brand-description {
    font-size: 0.875rem;
    color: var(--theme-text-light);
    margin: 0;
    font-weight: 500;
  }

  .brand-tagline {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--theme-text);
    margin: 0 0 1rem 0;
  }

  .community-note {
    font-size: 0.875rem;
    color: var(--theme-text-light);
    margin: 0;
    font-style: italic;
  }

  .community-note a {
    color: var(--theme-accent);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .community-note a:hover {
    color: var(--theme-text);
    text-decoration: underline;
  }

  /* Navigation Sections */
  .footer-nav {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .nav-section h4 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--theme-text);
    margin: 0 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--theme-accent);
  }

  .nav-section ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-section li {
    margin: 0 0 0.75rem 0;
  }

  .nav-section a {
    color: var(--theme-text-light);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 450;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0;
  }

  .nav-section a:hover {
    color: var(--theme-accent);
    transform: translateX(4px);
  }

  .nav-section a[target="_blank"]::after {
    content: '↗';
    margin-left: 0.375rem;
    font-size: 0.75rem;
    opacity: 0.7;
  }

  /* Contributors Section */
  .footer-contributors {
    padding: 2rem 0;
    border-top: 1px solid var(--theme-divider);
    border-bottom: 1px solid var(--theme-divider);
  }

  .contributors-header {
    margin-bottom: 1.5rem;
  }

  .contributors-header h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--theme-text);
    margin: 0 0 0.5rem 0;
  }

  .contributors-header p {
    font-size: 0.875rem;
    color: var(--theme-text-light);
    margin: 0;
  }

  /* Footer Bottom */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    padding-top: 1.5rem;
  }

  .copyright p {
    font-size: 0.8125rem;
    color: var(--theme-text-light);
    margin: 0;
  }

  .footer-links {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .footer-links a {
    font-size: 0.8125rem;
    color: var(--theme-text-light);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--theme-accent);
  }

  .divider {
    font-size: 0.8125rem;
    color: var(--theme-text-lighter);
  }

  /* Responsive Design */
  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr 2fr;
      gap: 3rem;
    }

    .footer-nav {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-container {
      padding: 4rem 2rem 2rem;
    }

    .footer-content {
      gap: 4rem;
    }
  }

  @media (max-width: 767px) {
    .footer-container {
      padding: 2rem 1rem 1rem;
    }

    .footer-content {
      gap: 2rem;
    }

    .footer-nav {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .nav-section h4 {
      font-size: 0.8125rem;
    }

    .nav-section a {
      font-size: 0.8125rem;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .footer-links {
      flex-wrap: wrap;
    }

    .brand-section {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .brand-section .brand-info {
      text-align: left;
    }
  }

  @media (max-width: 480px) {
    .footer-nav {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .footer-container {
      padding: 1.5rem 0.75rem 0.75rem;
    }
  }
</style>
