---
import type { MarkdownHeading } from 'astro'
import TableOfContents from './TableOfContents'
import MoreMenu from './MoreMenu.astro'

type Props = {
  headings: MarkdownHeading[]
  editUrl: string
}

const { headings, editUrl } = Astro.props
---

<nav class="modern-right-sidebar" aria-labelledby="grid-right">
  <div class="sidebar-content">
    <TableOfContents client:media="(min-width: 50em)" headings={headings} />
    <MoreMenu editHref={editUrl} />
  </div>
</nav>

<style is:global>
  /* Modern TOC Styles */
  .modern-toc {
    font-size: 0.875rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    min-height: 0;
  }

  .toc-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 0;
    margin: 0 0 1rem 0;
    border-bottom: 1px solid var(--theme-divider, rgba(255, 255, 255, 0.1));
    flex-shrink: 0;
  }

  .toc-header-icon {
    color: var(--theme-text-light, #94a3b8);
    flex-shrink: 0;
  }

  .toc-heading {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--theme-text, #ffffff);
    margin: 0;
    line-height: 1.2;
  }

  .toc-content {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    min-height: 0;
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .toc-item {
    margin: 0;
    position: relative;
  }

  .toc-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--theme-text-light, #94a3b8);
    padding: 0.5rem 0;
    margin: 0.125rem 0;
    border-radius: 6px;
    transition: all 0.2s ease;
    font-weight: 450;
    line-height: 1.4;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
    white-space: normal;
    min-width: 0;
    max-width: 100%;
    border-left: 2px solid transparent;
    padding-left: 0.75rem;
  }

  .toc-link:hover {
    color: var(--theme-text, #ffffff);
    border-left-color: var(--theme-accent, #3b82f6);
  }

  .toc-item-active .toc-link {
    color: var(--theme-accent, #3b82f6) !important;
    border-left-color: var(--theme-accent, #3b82f6) !important;
    font-weight: 500;
  }

  .toc-link-text {
    flex: 1;
  }

  /* Depth-based indentation */
  .depth-3 .toc-link {
    padding-left: 1.5rem;
    font-size: 0.8125rem;
    color: var(--theme-text-lighter, #64748b);
  }

  .depth-3 .toc-link:hover {
    color: var(--theme-text-light, #94a3b8);
  }

  .depth-4 .toc-link {
    padding-left: 2.25rem;
    font-size: 0.75rem;
    color: var(--theme-text-lighter, #64748b);
  }

  /* Empty state */
  .toc-empty {
    padding: 1rem;
    text-align: center;
  }

  .toc-empty-text {
    color: var(--theme-text-lighter, #64748b);
    font-size: 0.8125rem;
    margin: 0;
    font-style: italic;
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .toc-header {
      padding: 0.625rem 0.75rem;
      margin: 0 0.25rem;
    }

    .toc-heading {
      font-size: 0.75rem;
    }

    .toc-link {
      padding: 0.375rem 0.75rem;
      margin: 0 0.25rem;
    }

    .depth-3 .toc-link {
      padding-left: 1.5rem;
    }

    .depth-4 .toc-link {
      padding-left: 2.25rem;
    }
  }

  /* Dark theme adjustments */
  :root.theme-dark .toc-item-active .toc-link {
    color: var(--theme-accent, #60a5fa) !important;
    background: var(--theme-bg-accent, rgba(96, 165, 250, 0.15)) !important;
  }

  :root.theme-dark .toc-item-active .toc-link::before {
    background: var(--theme-accent, #60a5fa);
  }
</style>

<style>
  .modern-right-sidebar {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .sidebar-content {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 1.5rem 0;
    min-width: 0;
    min-height: 0;
  }

  /* Scrollbar Styling to match left sidebar */
  .sidebar-content::-webkit-scrollbar,
  .toc-content::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar-content::-webkit-scrollbar-track,
  .toc-content::-webkit-scrollbar-track {
    background: transparent;
  }

  .sidebar-content::-webkit-scrollbar-thumb,
  .toc-content::-webkit-scrollbar-thumb {
    background: var(--theme-text-lighter, rgba(255, 255, 255, 0.2));
    border-radius: 3px;
  }

  .sidebar-content::-webkit-scrollbar-thumb:hover,
  .toc-content::-webkit-scrollbar-thumb:hover {
    background: var(--theme-text-light, rgba(255, 255, 255, 0.3));
  }
</style>
