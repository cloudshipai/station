# Station Git LFS Configuration

# Binary files - store in LFS for better repository performance
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.exe filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
*.deb filter=lfs diff=lfs merge=lfs -text
*.rpm filter=lfs diff=lfs merge=lfs -text
*.pkg filter=lfs diff=lfs merge=lfs -text
*.dmg filter=lfs diff=lfs merge=lfs -text
*.msi filter=lfs diff=lfs merge=lfs -text

# Database files
*.db filter=lfs diff=lfs merge=lfs -text
*.sqlite filter=lfs diff=lfs merge=lfs -text
*.sqlite3 filter=lfs diff=lfs merge=lfs -text

# Large data files
*.csv filter=lfs diff=lfs merge=lfs -text
*.json.gz filter=lfs diff=lfs merge=lfs -text

# Docker images (if stored in repo)
*.docker filter=lfs diff=lfs merge=lfs -text

# Build artifacts directory
dist/ filter=lfs diff=lfs merge=lfs -text
build/releases/ filter=lfs diff=lfs merge=lfs -text

# Station specific binaries
stn filter=lfs diff=lfs merge=lfs -text
station filter=lfs diff=lfs merge=lfs -text

# Test fixtures that might be large
test/fixtures/**/*.gz filter=lfs diff=lfs merge=lfs -text
test/fixtures/**/*.tar filter=lfs diff=lfs merge=lfs -text